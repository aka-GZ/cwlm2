<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_park_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/item_park_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="D2010"
        android:textColor="@color/text_gary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_park_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text_gary"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/item_park_address"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="-1å±‚"
        android:textColor="@color/text_gary"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|right"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/item_park_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:button="@drawable/selector_checkbox_style"
            android:enabled="false"
            android:focusable="false"
            android:gravity="center"
            android:scaleX="0.6"
            android:scaleY="0.6" />

    </LinearLayout>

</LinearLayout>